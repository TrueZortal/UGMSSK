<body>
<table class = "board">
    <thead>
        <tr>
            <th colspan="8"><h1>Planszo generator</h1></th>
        </tr>
    </thead>

    <% @board.render_board.each_with_index do |line, index| %>
      <tr>
        <% line.each do |field| %>
            <td>
              <h1 class="field">
              <%= field.display%>
              <span class="tooltiptext"><%= field.position.to_a%></span>
              </h1>
            </td>
        <% end %>
      </tr>
    <% end %>
</table>
</body>

<style>
body {
  background-color: green;
}

.board {
  border-collapse: collapse;
  background-color: green;
  margin-left: auto;
  margin-right: auto;

}
/* Tooltip container */
.field {
  font-size: 2rem;
  line-height: 0;
  cursor: pointer;
  text-align: center;

}

/* Tooltip text */
.field .tooltiptext {
  font-size: 1rem;
  visibility: hidden;
  width: 40px;
  background-color: brown;
  color: black;
  text-align: center;
  padding: 5px 0;
  border-radius: 6px;
  line-height: 1;

  /* Position the tooltip text - see examples below! */
  position: absolute;
  z-index: 1;
}

/* Show the tooltip text when you mouse over the tooltip container */
.field:hover .tooltiptext {
  visibility: visible;
}
</style>



